{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node",
      "nuxt"
    ],
    "paths": {
      "~/*": [
        "app/*",
        "#types/*"
      ],
      "@/*": [
        "app/*"
      ],
      "#/types/*": [
        "shared/types/*"
      ]
    }
  },
  "include": [
    "app/**/*",
    "server/**/*",
    "shared/**/*",
    ".nuxt/*.ts"
  ],
  "files": [
    "custom-types.d.ts"
  ],
}